<%# provide(:@activity.activity_type.name) %>

<hgroup>
  <h1 class="text-right"><em>Activities count: <%= @activities.count %></em></h1>
</hgroup>

<div class="d-flex flex-wrap">



    <% @activities.each do |activity| %>

        <div class="col-md-4 col-4 d-flex justify-content-between align-items-center">
          <div class="card mb-4 shadow-sm">
                <%# <%= image_tag(activity.activity_type.alt_icon, class:"", alt: activity.name) %>  
          <div>
                <%# #TODO fix image tag <%= image_tag(@activity.thumbnail, class:"", alt: @activity.name) %>  
                 <%= font_awesome_tag(activity.activity_type.fa_icon, "10rem") %>
          </div>
            <div class="card-body">
              <span class="card-text">   
               <span  class="text-right ">Started: <%= activity.start_time.to_s(:short) %></span> <br/> 
               <span  class="text-muted  text-right ">
                <% if activity.duration.nil? %>
                You are still exercising.
                <% else %>
                You exercised for: <%= activity.duration %> minutes
                <% end %>
                </span>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <%= link_to 'Details', activity, class: "btn btn-sm btn-info" %>
                    <%= link_to 'Edit', edit_activity_path(activity),  class: "btn btn-sm btn-warning" %>
                    <%= link_to 'Delete', activity,  class: "btn btn-sm btn-outline-danger",method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              
              </div>
             </div>
            </div>
          </div>

     <% end %>
 

</div>

<%= link_to 'New Activity', new_activity_path,  class: "btn btn-md btn-primary"  %>

















